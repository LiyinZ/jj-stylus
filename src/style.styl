@import '../lib/jeet/stylus/jeet'
@import '_settings'

// edit()

*
	margin 0
	padding 0
	box-sizing border-box
	font-family sans-serif
	
body
	margin 1rem
	
.wrap
	center(1000px)
	
aside
	stack()
	text-align center
	@media(min-width 700px)
		col(1/3)
	nav
		margin-bottom 1rem
		a
			display block
			background lighten(red, 40%)
			color white
			text-decoration none
			padding 1em
			border-bottom 1px solid lighten(red, 25%)
img
	max-width 100%
	
.posts
	stack()
	@media(min-width 700px)
		col(2/3)
	
.post
	cf()
	border 1px solid #ddd
	padding .5em
	margin-bottom 1rem
	>img
		stack()
		margin-bottom 1rem
		@media(min-width 700px)
			col(1/4)
	>article
		stack()
		@media(min-width 700px)
			col(3/4)
			
.logo
	display block